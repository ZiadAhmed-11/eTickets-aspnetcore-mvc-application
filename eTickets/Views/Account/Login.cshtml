@model LoginDTO

@{
    ViewData["Title"] = "Login";
    ViewData["CurrentURL"] = "~/Account/Login";

}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div>
                <div class="card-body">
                    <h2 class="card-title text-center">@ViewData["Title"]</h2>

                    <form asp-action="Login" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" autocomplete="email" autofocus required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" autocomplete="current-password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
                            {
                                <div class="alert alert-danger">
                                    <ul>
                                        @foreach (var error in ViewBag.Errors)
                                        {
                                            <li>@error</li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 text-center">
        <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Register now!</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
