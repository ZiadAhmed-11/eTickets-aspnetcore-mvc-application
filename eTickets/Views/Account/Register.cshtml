@model eTickets.DTO.RegisterDTO

@{
    ViewBag.Title = "Register";
    ViewData["CurrentURL"] = "~/Account/Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="">
                <div class="card-body">
                    <h2 class="card-title text-center">@ViewBag.Title</h2>

                    <form asp-action="Register" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="PersonName" class="form-label">Your Name</label>
                            <input asp-for="PersonName" class="form-control" />
                            <span asp-validation-for="PersonName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">User Type</label><br>
                            <div class="form-check form-check-inline">
                                <input type="radio" id="User" asp-for="UserType" class="form-check-input" value="User" checked />
                                <label class="form-check-label" for="User">User</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input type="radio" id="Admin" asp-for="UserType" class="form-check-input" value="Admin" />
                                <label class="form-check-label" for="Admin">Admin</label>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 text-center">
        <p>Already have an account? <a asp-action="Login" asp-controller="Account">Login here</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
