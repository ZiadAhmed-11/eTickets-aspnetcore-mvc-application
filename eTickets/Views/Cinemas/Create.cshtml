@model Cinema

@{
    ViewData["Title"] = "Add a new Cinema";
    ViewData["CurrrentUrl"] = "~/Cinemas";

}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mt-5">Add a New Cinema</h1>
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3 text-center">
                            <img id="Logo" class="border border-info rounded-circle" style="max-width: 150px;" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Logo" class="form-label"></label>
                            <input asp-for="Logo" class="form-control" />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                            <a class="btn btn-outline-secondary me-2" asp-action="Index">Show All</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('Logo');
            output.src = $("#Logo").val();
        });

        $("#Logo").on("change", function () {
            var output = document.getElementById('Logo');
            output.src = $(this).val();
        });
    </script>
}
