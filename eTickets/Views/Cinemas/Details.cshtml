@model Cinema

@{
    ViewData["Title"] = "Details of the Cinema";
    ViewData["CurrrentUrl"] = "~/Cinemas";

}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mt-5 text-center">Details for @Model.Name</h1> <!-- Centered header -->
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="mb-3 text-center">
                        <img class="border border-info rounded-circle" style="max-width: 150px;" id="Logo" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Logo" class="form-label"></label>
                        <input asp-for="Logo" class="form-control" readonly />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" readonly />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <a class="btn btn-outline-secondary float-end me-2" asp-action="Index">Show All</a>
                        <!--@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                                        <a class="btn btn-outline-success float-end me-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('Logo');
            output.src = $("#Logo").val();
        });
    </script>
}
